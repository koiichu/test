<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.tabbar6.Five_Fragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/Text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="เลขทะเบียน"
                android:textColor="#4d4d4d"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="หมายเลขทะเบียนรถแท็กซี่ (ทท-1234)"
                android:padding="10dp" />

            <TextView
                android:id="@+id/Text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="สีรถแท็กซี่"
                android:textColor="#4d4d4d"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/Text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="เส้นทางของคุณ"
                android:textColor="#4d4d4d"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7"
                    android:hint="จุดเริ่มต้น"
                    android:padding="10dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/bt_back" />

                <EditText
                    android:id="@+id/end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ems="7"
                    android:hint="จุดหมาย"
                    android:padding="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="ความประพฤติ"
                android:textColor="#4d4d4d"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="เลือกได้มากกว่า 1 ข้อ"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:checked="false"
                    android:text="ขับรถเร็ว"
                    android:textColor="#4d4d4d"
                    android:textSize="25sp" />

                <CheckBox
                    android:id="@+id/checkBox_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:checked="false"
                    android:text="ไม่สุภาพ"
                    android:textColor="#4d4d4d"
                    android:textSize="25sp" />

                <CheckBox
                    android:id="@+id/checkBox_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:checked="false"
                    android:text="ลวนลาม"
                    android:textColor="#4d4d4d"
                    android:textSize="25sp" />

                <CheckBox
                    android:id="@+id/checkBox_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:checked="false"
                    android:text="New CheckBox"
                    android:textColor="#4d4d4d"
                    android:textSize="25sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="ความพึงพอใจ"
                android:textColor="#4d4d4d"
                android:textSize="25sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary" />

            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="ข้อมูลเพิ่มเติม"
                android:inputType="textMultiLine"
                android:textColor="#666666"
                android:textSize="25sp" />

            <Button
                android:id="@+id/report_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Report" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
