<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="safetytaxi.safetytaxiapp.Forgetpwd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="กรุณากรอกอีเมลของคุณในช่องข้างล่างนี้ แล้วคุณจะได้รับข้อความเพื่อตั้งค่ารหัสผ่านใหม่ของคุณ"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="#b7b7b7"
            android:textSize="25sp" />

        <Button
            android:id="@+id/bt_reset"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/bt_yel"
            android:onClick="resetPwd"
            android:shadowColor="#000000"
            android:text="RECIEVE A NEW PASSWORD"
            android:textColor="#434343"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>
