<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="safetytaxi_1.safetytaxi.Login">

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button_home"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_insert_emoticon_white_48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#00d4c8"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:src="@drawable/iconapp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="S A F E T Y   T A X I"
            android:textSize="16sp"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_gravity="center_horizontal"
            android:ems="14"
            android:hint="ชื่อ"
            android:inputType="textPersonName"
           android:textColorHint="#ffffff"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:ems="14"
            android:hint="รหัสผ่าน"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"/>


        <Button
            android:id="@+id/bt_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/password"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_but" />

        <Button
            android:id="@+id/bt_signup"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/bt_login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/signup_but" />

        <TextView
            android:id="@+id/forgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/bt_signup"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="ลืมรหัสผ่าน?" />

    </LinearLayout>
</RelativeLayout>
